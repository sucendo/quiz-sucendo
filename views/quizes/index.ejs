<form method="get" action="/quizes">
<Select onchange="form.submit()" name="tema">
<option value="" disabled selected>Seleciona tu tema</option>
<option name="Geografía" value="Geografía">Geografía</option>
<option name="Religión" value="Religión">Religión</option>
<option name="Ocio" value="Ocio">Ocio</option>
<option name="Ciencia" value="Ciencia">Ciencia</option>
<option name="Tecnología" value="Tecnología">Tecnología</option>
</select></br></br>
</form>

<form method="get" action="/quizes">
      <input type="text" name="search" placeholder="texto_a_buscar" value="" />
      <input type="submit" value="Enviar">
</form>
</br>
<table><p>
<% var i; for (i=0; i < quizes.length; i++) { %>
    <tr>
      <td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
      <td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].tema %></a></td>

      <%if(session.user){%>
        <td><a href="quizes/<%= quizes[i].id %>/edit"><button>editar</button></a></td>
        <td>
          <form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
            <button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
              borrar
            </button>
          </form>
        </td>
      <%}%>

    </tr>
  <% } %>
</table>
<p></br>
<%if(session.user){%>
  <a href="/quizes/new"><button>Crear pregunta</button></a>
<%}%>
